nav.navbar1
  .logo
    img(src='/images/Dockvile Logo.png' alt='')
  .nav-items
    ul
      li
        a(href='/api/parking')
          .silent-space
            span t
          img(src='/images/Parking icon.svg' alt='')
          p Parking
      li
        a(href='/api/tirepurchase')
          .silent-space
            span t
          img(src='/images/tire icon.svg' alt='')
          p Tire
      li
        a(href='/api/batterypurchase')
          .silent-space
            span t
          img(src='/images/battery icon.svg' alt='')
          p Battery
      li
        a(href='/api/dashboard')
          .silent-space
            span t
          img(src='/images/dash board icon.svg' alt='')
          p Dashboard
    ul
      li
        a(href='/api/logIn')
          .silent-space
            span t
          img(src='/images/simple-line-icons_logout.svg' alt='')
          p LogOut
main
  div
    .header
      .left-section Battery
      .right-section
        img.Notification(src='/images/Header-Notification.svg' alt='')
        img.shopping(src='/images/Header-Shopping chart.svg' alt='')
        img.img(src='/images/Header-img.png' alt='profile-pic')
  .button-section
    a(href="/api/batterypurchase") 
      button(type='submit') Battery Purchase
    a(href="/api/batteryrent") 
      button(type='submit') Battery Rent
  section
    .container
      form#form(name="regbatteryrenter" method="POST" action='/api/regbatteryrenter')
        h4 Battery Rent
        .input-control
          label(for='fullName') Full Name
          input#fullName(name='fullName' type='text')
          .error
        .input-control
          label(for='phoneNumber') Phone Number
          input#phoneNumber(name='phoneNumber' type='text')
          .error
        .input-control
          label(for='nin') NIN
          input#nin(name='nin' type='text')
          .error
        .input-control-special
          .input-dropdown
            label(for='vehicles') Choose a vehicle:
            select#vehicles(name='vehicles')
              option(value='truck') Truck
              option(value='personalCar')
                | Personal Car(below 5 seats)
              option(value='taxi') Taxi(below 5 seats)
              option(value='coaster') Coaster(above 14 seats)
              option(value='boda') Boda
        .input-control-special
          .input-dropdown
            label(for='batterytype') Type of Battery:
            select#batterytype(name='batterytype')
              option(value='Good Year') Good Year
              option(value='Dunlop') Dunlop
              option(value='Toyo Tire') Toyo Tire
              option(value='Michelin') Michelin
        .input-control
          label(for='bartterynumber') Number of batteries
          input#bartterynumber(name='bartterynumber' type='number')
          .error
        .input-control
          label(for='bartteryprice') Price of barttery
          input#bartteryprice(name='bartteryprice' type='number')
          .error
        button(type='submit') Enter Purchase
