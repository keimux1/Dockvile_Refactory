doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
        title Receipt 
    body(style= "display: flex;,flex-direction: column;,justify-content: center;,align-items: center;,margin-left:50px; " )
        .receipt
            p.head Dockville day and night parking
            h1 Parking receipt
            p Driver Name: #{parking.fullName}  
            p Phone Number: #{parking.phoneNumber} 
            p Time In : #{parking.timeIn}
            p Date In : #{parking.dateIn}
            p Date Out: #{parking.timeOut}
            p Date Out: #{parking.dateOut}
            p NIN: #{parking.nin}
            p Receipt