  div
    .header
      .left-section Parking
      .right-section
        img.Notification(src='/images/Header-Notification.svg' alt='')
        img.shopping(src='/images/Header-Shopping chart.svg' alt='')
        img.img(src='/images/Header-img.png' alt='profile-pic')
  section
    .container
      form#form(name="parkingform" method="POST" action='/api/dashboard/edit?id=' +parking._id)
        h1 Registration
        .input-control
          label(for='fullName') Full Name
          input#fullName(name='fullName' value=parking.fullName type='text')
          .error
        .input-control
          label(for='phoneNumber') Phone Number
          input#phoneNumber(name='phoneNumber' value=parking.phoneNumber type='text')
          .error
        .input-control
          label(for='nin') NIN
          input#nin(name='nin' value=parking.nin type='text')
          .error
        .input-control
          label(for='numberPlate') Number Plate
          input#numberPlate(name='numberPlate' value=parking.numberPlate type='text')
          .error
        .input-control-special
          .input-dropdown
            label(for='vehicles') Choose a vehicle:
            select#vehicles(name='vehicles' value=parking.vehicles)
              option(value='truck' selected=parking.vehicles=== 'truck' ) Truck
              option(value='personalCar' selected=parking.vehicles=== 'personalCar')
                | Personal Car(below 5 seats )
              option(value='taxi' selected=parking.vehicles=== 'taxi') Taxi(below 5 seats)
              option(value='coaster' selected=parking.vehicles=== 'coaster') Coaster(above 14 seats)
              option(value='boda' selected=parking.vehicles=== 'boda') Boda
        .input-color
            label(for='color') Color:
            input#color(type='color' value=parking.color name='color')
        .input-control-special
          .input-dropdown
            label(for='parkingPrice' value=parking.parkingPrice) Parking Time
            select#parkingPrice(name='parkingPrice')
              option(disabled="disabled") 
              option( style="background-color: rgb(12, 100, 100)" disabled="disabled") Coster
              option(value='4000' selected=parking.parkingPrice=== '4000' style="background-color: rgb(40, 166, 166)") Coster Day
              option(value='2000' selected=parking.parkingPrice=== '2000' style="background-color: rgb(40, 166, 166)") Coster Night
              option(value='3000' selected=parking.parkingPrice=== '2000' style="background-color: rgb(40, 166, 166)") Coster less than 3 hours
              option(disabled="disabled") 
              option(style="background-color: rgb(18, 78, 38)" disabled="disabled") Taxi,PersonalCar,Truck
              option(value='3000' selected=parking.parkingPrice=== '3000' style="background-color: rgb(50, 168, 89)") Day parking
              option(value='2000' selected=parking.parkingPrice=== '2000' style="background-color: rgb(50, 168, 89)") Night Parking
              option(value='2000' selected=parking.parkingPrice=== '2000' style="background-color: rgb(50, 168, 89)") less than 3 hours
              option(disabled="disabled") 
              option(style="background-color: rgb(22, 69, 79)" disabled="disabled") Boda
              option(value='2000' selected=parking.parkingPrice=== '4000' style="background-color: rgb(63, 180, 207)") Boda Day
              option(value='2000' selected=parking.parkingPrice=== '2000' style="background-color: rgb(63, 180, 207)") Boda Night
              option(value='1000' selected=parking.parkingPrice=== '1000' style="background-color: rgb(63, 180, 207)") Boda less than 3 hours
        
        .input-control
          label(for='parkingSlot') Assign Parking Slot
          input#parkingSlot(name='parkingSlot' value=parking.parkingSlot type='text')
          .error
        .input-control
          //time in
          label(for='timeIn') Time In
          input#timeIn(name='timeIn' value=parking.timeIn type='text')
        .input-control
          //Date in
          label(for='dateIn') Date In
          input#dateIn(name='dateIn' value=parking.dateIn type='text')
        .input-control
          //time Out
          input#timeOut(name='timeOut' type='hidden')
        .input-control
          //Date Out
          input#dateOut(name='dateOut' type='hidden')

        button(onclick='insertDateOut(); insertTimeOut();' type='submit') Check Out

